{
	"compilerOptions": {
		"noEmit": true,
		"target": "es6", // using babel-loader to transpile to es5
		"module": "esnext", //commonjs destroys 'dynamic imports' which is used for code splitting
		"preserveConstEnums": true,
		"baseUrl": "./src",
		"jsx": "react-jsx", // process JSX
		"lib": ["DOM", "DOM.Iterable", "es5", "es6", "es7", "es2017", "es2019"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "noImplicitAny": false,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
    "isolatedModules": true,
		"sourceMap": true
	}
}
